{
  "rewrites": [
    {
      "source": "/.netlify/functions/plugin-health",
      "destination": "/api/datocms/plugin-health"
    },
    {
      "source": "/.netlify/functions/backup-status",
      "destination": "/api/datocms/backup-status"
    },
    {
      "source": "/.netlify/functions/scheduledBackups",
      "destination": "/api/jobs/scheduled-backups"
    }
  ],
  "crons": [
    {
      "path": "/api/jobs/scheduled-backups",
      "schedule": "5 2 * * *"
    }
  ]
}
